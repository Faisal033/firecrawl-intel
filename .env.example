# ============================================
# VERCEL PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.local in Vercel dashboard

# Node Environment
NODE_ENV=production
PORT=3000

# ============================================
# FIRECRAWL API CONFIGURATION
# ============================================
# For Vercel: Use your Firecrawl cloud API endpoint or self-hosted URL
# Options:
# 1. Firecrawl Cloud: https://api.firecrawl.dev
# 2. Self-hosted on Railway/Render: https://your-firecrawl-instance.railway.app
# 3. Local Docker: http://localhost:3002 (won't work from Vercel)

FIRECRAWL_API_URL=https://api.firecrawl.dev
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# ============================================
# DATABASE (OPTIONAL)
# ============================================
# MongoDB Atlas connection string
MONGODB_URI=

# ============================================
# API CONFIGURATION
# ============================================
API_PORT=3000
LOG_LEVEL=info

# ============================================
# CRAWLER SETTINGS
# ============================================
CRAWL_TIMEOUT=30000
CRAWL_MAX_RETRIES=3
CRAWL_BATCH_SIZE=5

# ============================================
# SECURITY
# ============================================
# Add your trusted domains here
ALLOWED_ORIGINS=*
